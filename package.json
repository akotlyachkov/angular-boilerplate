{
    "name": "angular2-webpack2",
    "version": "2.0.0",
    "description": "angular4 universal sample app build with webpack3",
    "main": "start.js",
    "scripts": {
        "watch tsc": "tsc -p tsconfig.json -w",
        "watch webpack": "webpack --config webpack.browser.js --watch",
        "watch gulp": "gulp watch",
        "gulp": "gulp",
        "tsc": "tsc -p tsconfig.json",
        "ngc": "ngc -p tsconfig.ngc.json",
        "aot": "tsc -p tsconfig.aot.json",
        "webpack browser": "webpack --config webpack.browser.js",
        "webpack server": "webpack --config webpack.server.js",
        "release": "gulp clean  && ngc -p tsconfig.ngc.json && tsc -p tsconfig.aot.json && webpack --config webpack.server.aot.js && webpack --config webpack.browser.aot.js && gulp release-css && gulp release-js && gulp inject",
        "release(server js)": "ngc -p tsconfig.ngc.json && tsc -p tsconfig.aot.json && webpack --config webpack.server.aot.js",
        "debug": "gulp clean && tsc -p tsconfig.json && webpack --config webpack.browser.js && gulp && gulp inject",
        "debug(js)": "tsc -p tsconfig.json && webpack --config webpack.browser.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/akotlyachkov/angular2-webpack2.git"
    },
    "keywords": [
        "angular",
        "angular4",
        "express",
        "webpack",
        "webpack3",
        "sample"
    ],
    "author": "akotlyachkov@gmail.com",
    "bugs": {
        "url": "https://github.com/akotlyachkov/angular2-webpack2/issues"
    },
    "homepage": "https://github.com/akotlyachkov/angular2-webpack2#readme",
    "dependencies": {
        "@angular/animations": "^4.3.6",
        "@angular/common": "^4.3.6",
        "@angular/compiler": "^4.3.6",
        "@angular/compiler-cli": "^4.3.6",
        "@angular/core": "^4.3.6",
        "@angular/forms": "^4.3.6",
        "@angular/http": "^4.3.6",
        "@angular/platform-browser": "^4.3.6",
        "@angular/platform-browser-dynamic": "^4.3.6",
        "@angular/platform-server": "^4.3.6",
        "@angular/router": "^4.3.6",
        "@nguniversal/express-engine": "^1.0.0-beta.3",
        "body-parser": "^1.17.2",
        "bootstrap": "^4.0.0-beta",
        "compression": "^1.7.0",
        "express": "^4.15.4",
        "express-minify-html": "^0.11.4",
        "helmet": "^3.8.1",
        "html5-history-api": "^4.2.8",
        "ie-shim": "^0.1.0",
        "reflect-metadata": "^0.1.10",
        "rxjs": "^5.4.3",
        "zone.js": "^0.8.17"
    },
    "devDependencies": {
        "@types/core-js": "^0.9.43",
        "@types/express": "^4.0.37",
        "@types/node": "^8.0.25",
        "angular2-template-loader": "^0.6.2",
        "core-js": "^2.5.0",
        "del": "^3.0.0",
        "font-awesome": "github:fortawesome/Font-Awesome",
        "gulp": "^3.9.1",
        "gulp-clean-css": "^3.7.0",
        "gulp-concat": "2.6.1",
        "gulp-inject": "^4.2.0",
        "gulp-sass": "2.3.2",
        "gulp-sourcemaps": "^2.6.1",
        "gulp-uglify": "^3.0.0",
        "html-loader": "^0.5.1",
        "node-sass": "^4.5.3",
        "source-map-loader": "^0.2.1",
        "typescript": "^2.4.2",
        "webpack": "^3.5.5",
        "webpack-bundle-analyzer": "^2.9.0"
    }
}

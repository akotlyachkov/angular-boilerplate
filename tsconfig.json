{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": "client/app"
    },
    "include": [
        "client/app/_browser/index.ts",
        "client/app/_server/index.ts"
    ],
    "angularCompilerOptions": {

        "strictMetadataEmit" : true
    }
}
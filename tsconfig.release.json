{
    "compilerOptions": {
        "baseUrl": "client/app",
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "sourceMap": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2015", "dom"]
    },
    "include": [
        "client/app/_browser/index.ts",
        "client/app/_browser/ie.ts",
        "client/app/_server/index.ts"
    ]
}
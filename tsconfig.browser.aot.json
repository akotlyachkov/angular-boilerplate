{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "watch": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "lib": [
            "es2015",
            "dom"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "baseUrl": "./client/app"
    },
    "include": [
        "client/app/_browser/module.ts"
    ],
    "angularCompilerOptions": {
        "skipMetadataEmit": true
    }
}